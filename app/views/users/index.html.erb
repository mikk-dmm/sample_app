<% provide(:title, 'All users') %>
<%= will_paginate @users %>

<% @users.each do |user| %>
  <%= link_to user.name, user %>
  <% if current_user.admin? && user != current_user %>
    | <%= link_to 'delete', user, method: :delete, data: { confirm: 'Are you sure?' } %>
  <% end %>
<% end %>

<%= will_paginate @users %>
